{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [ "get", "post" ],
      "route": "guess/{id:int}"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "sql",
      "direction": "in",
      "name": "game",
      "commandText": "select * from Game where id = @Id",
      "commandType": "Text",
      "parameters": "@Id = {id}",
      "connectionStringSetting": "SqlConnectionString"
    },
    {
      "type": "sql",
      "direction": "out",
      "name": "updatedGame",
      "commandText": "update Game set tries = @tries, done_at = @done_at where id = @id",
      "commandType": "Text",
      "connectionStringSetting": "SqlConnectionString"
    }
  ]
}
